@model Products

<h2>@Model.ProductName</h2>

<div class="thumbnail">
    <img  alt="@Model.ProductName" src="@Model.ImageUrl"/>
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#">@Model.ProductName</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.ProductId">Add To Cart</a>
            </p>

        </div>
    </div>
</div>
